
RewriteOptions inherit
ErrorDocument 404 /404.php
RewriteEngine on

### START WWW & HTTPS

# ensure www.
RewriteCond %{HTTP_HOST} !^www\. [NC]
#RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]


### END WWW & HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
RewriteRule ^([^.?]+)$ %{REQUEST_URI}.php [L]
#RewriteRule ^trigger/([^.?]+)$ trigger/%{REQUEST_URI}.php [L]

# Return 404 if original request is /foo/bar.php

#RewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$"
# Allow static files to pass without rewrite
RewriteCond %{REQUEST_URI} \.(png|jpg|jpeg|gif|css|js|webp|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule .* - [L]

RewriteRule ^(?!404\.html)$ - [L,NC,R=404]

# NOTE! FOR APACHE ON WINDOWS: Add [NC] to RewriteCond like this:

RewriteCond %{THE_REQUEST} "^[^ ]* .*?\.php[? ].*$" [NC]
<IfModule mod_headers.c>
  Header set Cache-Control "no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires 0
</IfModule>
# BEGIN WordPress
<FilesMatch "\.(png|jpg|jpeg|gif|webp)$">
    Allow from all
    Require all granted
</FilesMatch>
# END WordPress

